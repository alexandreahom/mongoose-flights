<%- include("../partials/html-head") %>
<link rel="stylesheet" href="/stylesheets/movies/new.css">
<%- include("../partials/nav") %> 

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights" method="POST">
    <label for="airline-input">Airline:
      <select name="airline" id="airline-input">
        <option value="American">American</option>
        <option value="Southwest">Southwest</option>
        <option value="United">United</option>
      </select>
    </label><br>
    <label for="airport-input">Airport:
      <select name="airport" id="airport-input">
        <option value="AUS">AUS</option>
        <option value="DFW">DFW</option>
        <option value="DEN" selected>DEN</option>
        <option value="LAX">LAX</option>
        <option value="SAN">SAN</option>
      </select><br>
    </label>
    <label>Flight Number: <input type="text" name="flightNo"></label><br>
    <label> Departs
      <input type="datetime-local" name="departs"></input>
  </label><br>
    <button type="submit">Add Flight</button>
  </form>
</main>

<%- include("../partials/footer") %>  

